# Ollama Model Configuration (Required)
OLLAMA_EMBEDDING_MODEL=embeddinggemma:300m
OLLAMA_QUERY_MODEL=gemma3:12b

# Ollama Base URL (Optional, defaults to http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Chunking Configuration (Optional, with defaults)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Configuration (Optional, with defaults)
RETRIEVER_TOP_K=4
RETRIEVER_MIN_SIMILARITY=0.0

# Vector Database Configuration (Optional, with defaults)
VECTOR_DB_COLLECTION_NAME=documents
